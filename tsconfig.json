{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "backup",
    "web-interface",
    "web/server",
    "web/shared/config"
  ],
  "exclude": ["node_modules", "dist"]
}
